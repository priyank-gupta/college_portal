<p id="notice"><%= notice %></p>

<h1>Listing Grade Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subjects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grade_classes.each do |grade_class| %>
      <tr>
        <td><%= grade_class.name %></td>
        <td><%= grade_class.subject_names.join(', ') %></td>
        <td><%= link_to 'Show', grade_class %></td>
        <td><%= link_to 'Edit', edit_grade_class_path(grade_class) %></td>
        <td><%= link_to 'Destroy', grade_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

